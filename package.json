{
  "name": "browserify",
  "version": "1.0.0",
  "description": "this is my first project in browserify",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "watchify app/{*.js,styles/*.css} -p [css-modulesify -o public.css] -x jquery -o ./public.js --debug --verbose",
    "prebuild_vendor": "rm -f ./public.js; rm -f ./vendor.js ; rm -f ./public.css",
    "build_vendor": "browserify -r jquery -o ./vendor.js",
    "postbuild_vendor": "node_modules/superstatic/bin/server & npm run build"
  },
  "author": "Hareesh Puliyedath Udumbath",
  "license": "MIT",
  "devDependencies": {
    "browserify-css": "^0.11.1",
    "css-modulesify": "^0.28.0",
    "jquery": "^3.2.1",
    "superstatic": "^4.3.0",
    "uniq": "^1.0.1"
  }
}
